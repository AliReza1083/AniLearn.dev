{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@components/*": ["./components/*"],
      "@contents/*": ["./contents/*"],
      "@assets/*": ["./assets/*"],
      "@layouts/*": ["./layouts/*"],
      "@tech/*": ["./components/Tech/*"],
      "@Workplace/*": ["./Workplace/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/tech/html/inputs.mdx"
  ],
  "exclude": ["node_modules"]
}
